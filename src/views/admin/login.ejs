<%- include('common-js') %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">登录</h3>
            <div class="card-text">
                <form id="login-form" class="needs-validation" novalidate action="/admin/login" method="POST">
                    <div class="form-floating mb-3">
                        <input name="phone" type="phone" class="form-control" placeholder="请输入手机号码" required>
                        <label for="phone">手机号码</label>
                        <div class="invalid-feedback">
                            请输入手机号码
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input name="password" type="password" class="form-control" placeholder="请输入密码" required>
                        <label for="passsword">密码</label>
                        <div class="invalid-feedback">
                            请输入密码
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-primary" type="submit">
                            登录
                        </button>
                        <a href="/admin/register" class="btn btn-link btn-register">
                            注册
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const loginForm = $('#login-form')
    loginForm.on('submit', function (e) {
        if (!this.checkValidity()) {
            e.preventDefault()
            e.stopPropagation()
        }
        loginForm.addClass('was-validated')
    })
</script>

<style>
    body {
        width: 100%;
        height: 100vh;
        background: #b8e5f8 url(/images/login_bg.png) no-repeat center / cover;
    }
    .container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }
    .card {
        min-width: 400px;
    }
</style>