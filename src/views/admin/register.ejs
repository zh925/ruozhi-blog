    body {
        width: 100%;
        height: 100vh;
        background: #b8e5f8 url('/images/login_bg.png') no-repeat center / cover;
    }
    .container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }
    .card {
        min-width: 400px;
    }
</style>
