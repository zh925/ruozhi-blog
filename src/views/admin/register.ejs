<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">注册</h3>
            <form id="register-form" class="needs-validation" novalidate action="/admin/register" method="POST">
                <div class="form-floating mb-3">
                    <input
                        class="form-control"
                        type="text"
                        name="phone"
                        maxlength="11"
                        placeholder="请输入手机号码"
                        required
                    >
                    <label for="phone">手机号码</label>
                    <div class="invalid-feedback">
                        请输入正确的手机号码
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input
                        class="form-control"
                        type="text"
                        name="nickname"
                        placeholder="请输入昵称"
                        maxlength="8"
                        required
                    >
                    <label for="nickname">昵称</label>
                    <div class="invalid-feedback">
                        请输入最多8位的昵称
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input
                        class="form-control"
                        type="text"
                        name="email"
                        placeholder="请输入邮箱"
                    >
                    <label for="email">邮箱（可选）</label>
                    <div class="invalid-feedback">
                        请输入正确的邮箱
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" name="gender">
                        <option selected value="">暂不选择</option>
                        <option value="MALE">先生</option>
                        <option value="FEMALE">女士</option>
                    </select>
                    <label for="gender">性别</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" name="password" type="password" minlength="8" placeholder="请输入密码" required>
                    <label for="password">密码</label>
                    <div class="invalid-feedback">
                        请输入至少8位的密码
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" name="repassword" type="password" placeholder="请输入重复密码" required>
                    <label for="repassword">重复密码</label>
                    <div class="invalid-feedback">
                        请输入重复密码
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-primary" type="submit">
                        注册
                    </button>
                    <a href="/admin/login" class="btn btn-link btn-login">
                        登录
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const registerForm = $('#register-form')
    registerForm.on('submit', function(e) {
        if(!this.checkValidity()) {
            e.preventDefault()
            e.stopPropagation()
        }
        registerForm.addClass('was-validated')
    })
</script>

