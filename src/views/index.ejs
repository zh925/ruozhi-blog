<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Ruozhi's blog</h3>
            <form class="needs-validation" novalidate method="POST" action="/api/user/login">
                <div class="form-group">
                    <label for="phone">手机号码</label>
                    <input name="phone" type="text" class="form-control" placeholder="请输入手机号码" required>
                    <div class="invalid-feedback">
                        请输入手机号码
                    </div>
                </div>
                <div class="form-group">
                    <label for="passsword">密码</label>
                    <input name="password" type="password" class="form-control" placeholder="请输入密码" required>
                    <div class="invalid-feedback">
                        请输入密码
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">登录</button>
            </form>
        </div>
    </div>
</div>

<script>
$(function() {
    $('.needs-validation').on('submit', function(e) {
        e.preventDefault()
        this.classList.add('was-validated')
        if(!this.checkValidity()) {
            return
        }
        const formData = $(this).serialize()
        console.log(formData)
    })
})
</script>

