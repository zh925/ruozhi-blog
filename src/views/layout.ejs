        <sl-icon class="alert-icon" slot="icon" name="info-circle"></sl-icon>
        <div class="alert-message">123</div>
    </sl-alert>

    <% if(render.header) { %>
        <%- include('./layout/header') %>
    <% } %>

    <%- body %>

    <% if (render.footer) { %>
        <%- include('./layout/footer') %>
    <% } %>

